//pm2.json
{
    "apps": [
        {
            "name": "tdex-api",
            "script": "./index.js",
            "env": {
                "COMMON_VARIABLE": "true"
            },
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],
    "deploy": {
        "production": {
            "user": "bobo",
            "host": [
                "192.168.2.202"
            ],
            "port": "2096",
            "ref": "origin/master",
            "repo": "https://github.com/samyulam2016/tdex-node-api.git",
            "path": "/application/data/auto",
            "ssh_options": "StrictHostKeyChecking=no",
            "pre-deploy": "git pull" # 部署前执行
            "post-deploy": "npm install &&  pm2 reload deploy.json --env production" # 部署后执行
            "env": {
                "NODE_ENV": "production"
            }
        }
    }
}
